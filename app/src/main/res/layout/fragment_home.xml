<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:padding="4dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/search_drawable"
            android:hint="Search..."
            android:padding="12dp"
            android:drawableEnd="@drawable/microphone"
            android:drawableStart="@drawable/search"
            android:drawablePadding="16dp"
            android:textColorHint="@color/colorPrimary"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/passed_sign"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:src="@drawable/checked"
            android:layout_marginBottom="8dp"
            app:civ_circle_background_color="@color/activeColor"
            tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon"
                android:textColor="@color/fontColorLight"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="12dp">


                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:background="@color/btnSubmit"
                    android:layout_gravity="center"
                    android:gravity="top"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/current_sign"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/goal_active"
            android:layout_marginBottom="4dp"
            app:civ_circle_background_color="@color/colorPrimary"
            tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tue"
                android:textStyle="bold"
                android:textColor="@color/fontColorLight"
                android:textAlignment="center"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="12dp">


                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:background="@color/btnSubmit"
                    android:layout_gravity="center"
                    android:gravity="top"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/future_sign1"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/goal"
            android:layout_marginBottom="8dp"
            app:civ_circle_background_color="@color/boxShadowDark"
            tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wed"
                android:textStyle="bold"
                android:textColor="@color/fontColorLight"
                android:textAlignment="center"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="12dp">


                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:background="@color/btnSubmit"
                    android:layout_gravity="center"
                    android:gravity="top"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/future_sign2"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:src="@drawable/goal"
                app:civ_circle_background_color="@color/boxShadowDark"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thur"
                android:textStyle="bold"
                android:textColor="@color/fontColorLight"
                android:textAlignment="center"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="12dp">


                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:background="@color/btnSubmit"
                    android:layout_gravity="center"
                    android:gravity="top"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/future_sign3"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:src="@drawable/goal"
            app:civ_circle_background_color="@color/boxShadowDark"
            tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fri"
                android:textStyle="bold"
                android:textColor="@color/fontColorLight"
                android:textAlignment="center"/>
        </LinearLayout>


        </LinearLayout>
    </LinearLayout>

        <ScrollView
        android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <ImageView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/date"
            android:layout_marginRight="4dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp">
        <TextView
            android:id="@+id/current_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/current_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="April 2019"
            android:textAlignment="center"
            android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp">
            <TextView
                android:id="@+id/current_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/errorColor"
                android:textAlignment="textStart"
                android:text="REACT" />
            <TextView
                android:id="@+id/current_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduction to React Hooks"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Featured books!"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="4dp"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Articles"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="2dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/homeRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp"
            tools:listitem="@layout/article_list" />
    </LinearLayout>
        </LinearLayout>

    </ScrollView>
    

</LinearLayout>